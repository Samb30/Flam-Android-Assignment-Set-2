<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:layout_marginBottom="8dp"
    android:layout_marginHorizontal="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Top Row: Icon + Texts + Refresh Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Weather Icon -->
            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/cloudy_day_svg" />

            <!-- Text Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:gravity="start">

                <TextView
                    android:id="@+id/tvDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monday, May 27"
                    android:textStyle="bold"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvTempSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:text="Temp: 22°C - 28°C" />
            </LinearLayout>

            <!-- Refresh Icon -->
            <ImageView
                android:id="@+id/ivRefresh"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/arrow_down"
                android:contentDescription="Refresh" />
        </LinearLayout>

        <!-- Expandable section (initially hidden) -->
        <LinearLayout
            android:id="@+id/expandedLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tvDetailHumidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidity: 60%" />

            <TextView
                android:id="@+id/tvDetailCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Condition: Sunny" />

            <TextView
                android:id="@+id/tvDetailTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last updated: 6:00 AM" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
